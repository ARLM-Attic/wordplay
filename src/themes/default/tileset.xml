<tileset>
  <!-- Splash Screens -->
  <tile id="game-over" file="game-over.svg"/>

  <!-- Selection Animation -->
  <tile id="selected" file="selected.svg"/>

  <!-- A "normal" tile -->
  <tile id="normal" file="normal.svg"/>

  <!-- Burning Tiles -->
  <tile id="burning" file="burning.svg"
	columns="2" count="9" delay-ms="100">
    <!-- This loops through the first four -->
    <frame sequence="3" next-frame="0"/>

    <frame sequence="4" random="false"/>
    <frame sequence="5" random="false"/>
    <frame sequence="6" random="false"/>
    <frame sequence="7" random="false"/>
    <frame sequence="8" random="false"/>
  </tile>

  <tile id="burnt" file="burning.svg" columns="2" count="9"
	delay-ms="50"> 
    <!-- These last five are used for the "going" away animation" -->
    <frame sequence="4" random='false'/>
    <frame sequence="5" random='false'/>
    <frame sequence="6" random='false'/>
    <frame sequence="7" random='false'/>
    <frame sequence="8" random='false' next-frame="8"/>
  </tile>

  <!-- Flooded Tiles -->
  <tile id="flooded" file="flooded.svg"
	columns="2" count="8"
	delay-ms="400">
    <!-- This is the last frame of the "normal" sequence -->
    <frame sequence="3" next-frame="0"/>

    <!-- This is the filling sequence -->
    <frame sequence="4" random='false'/>
    <frame sequence="5" random='false'/>
    <frame sequence="6" random='false'/>
    <frame sequence="7" random='false' next-frame="0"/>
  </tile>

  <!-- Poisoned Tiles -->
  <tile id="poisoned" file="poisoned.svg"/>

  <!-- Contagious or Plague Tiles -->
  <tile id="contagious" file="contagious.svg"/>

  <!-- Copper Bonus Point Tiles -->
  <tile id="copper" file="copper.svg" columns="2" count="4"
	delay-ms="50">
    <frame sequence="0" delay-ms="1500"/>
  </tile>

  <!-- Silver Bonus Point Tiles -->
  <tile id="silver" file="silver.svg" columns="2" count="4"
	delay-ms="50">
    <frame sequence="0" delay-ms="1500"/>
  </tile>

  <!-- Gold Bonus Point Tiles -->
  <tile id="gold" file="gold.svg" columns="2" count="4"
	delay-ms="50">
    <frame sequence="0" delay-ms="1500"/>
  </tile>

